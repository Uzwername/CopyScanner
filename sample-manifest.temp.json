{
    "manifest_version": 2,
    "name": "CopyScanner",
    "version": "1.0.0",
    "description": "Copy only what's needed. Without searching.",
    "permissions": ["activeTab", "clipboardRead", "clipboardWrite"],
    "browser_action": {
        "default_icon": {
            "16": "images/icon16.png",
            "24": "images/icon24.png",
            "32": "images/icon32.png"
        },
        "default_title": "CopyScanner",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "commands": {
        "selectively-copy": {
            "suggested_key": {
                "default": "Alt+C",
                "mac": "Alt+C"
            }
        }
    }
}