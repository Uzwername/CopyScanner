{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build/",
    "module": "es6",
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "strict": true,
    "sourceMap": true,
    "jsx": "preserve",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/",
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}